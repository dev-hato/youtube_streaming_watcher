{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:linters",
    ":timezone(Asia/Tokyo)"
  ],
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ],
  "automerge": true,
  "platformAutomerge": true
}
